<assembly>
	<id>1.0</id>
	<formats>
		<format>dir</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/config</directory>
			<outputDirectory>/config</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>script</directory>
			<outputDirectory>/bin</outputDirectory>
		</fileSet>		
		<fileSet>
			<directory>data/ref</directory>
			<outputDirectory>/bin/data/ref</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>*.jar</include>
			</includes>					
			<outputDirectory>/lib</outputDirectory>			
		</fileSet>		
		<fileSet>
			<directory>target/dependency</directory>
			<includes>
				<include>*.jar</include>
			</includes>					
			<outputDirectory>/lib</outputDirectory>			
		</fileSet>		
	</fileSets>
</assembly>

